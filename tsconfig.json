{
  "include": [
    "**/*.ts",
    "./index.ts"
  ],
  "exclude": [
    "./node_modules/"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "module": "commonjs",
    "target": "ES2018",
    "skipLibCheck": true,
    "strict": true
  }
}
